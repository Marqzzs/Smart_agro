<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SmartAgro"
             xmlns:converters="clr-namespace:SmartAgro.Converters"
             x:Class="SmartAgro.App">
    <Application.Resources>
        <ResourceDictionary>
            <converters:DayOfWeekConverter x:Key="DayConverter"/>
            <converters:CategoryConverter x:Key="CategoryConverter"/>
            <converters:SelectedConverter x:Key="SelectedConverter"/>
            <converters:SelectedTextConverter x:Key="SelectedTextConverter"/>
            <converters:LuminosidadeConverter x:Key="LuminosidadeConverter" />
            <converters:IconConverter x:Key="IconConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
